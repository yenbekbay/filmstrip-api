{
  "name": "filmstrip-api",
  "version": "0.0.0",
  "private": true,
  "homepage": "https://github.com/yenbekbay/filmstrip-api",
  "repository": "yenbekbay/filmstrip-api",
  "license": "GPL-3.0",
  "author": {
    "name": "Ayan Yenbekbay",
    "email": "ayan.yenb@gmail.com",
    "url": "http://yenbekbay.me"
  },
  "engines": {
    "node": "6.x.x"
  },
  "scripts": {
    "deploy": "sh ./scripts/deploy.sh",
    "run-migration": "node -r dotenv/config -r babel-register scripts/run-migration.js",
    "run-job": "node -r dotenv/config -r babel-register scripts/run-job.js",
    "start": "npm run start:server",
    "start:worker": "node -r dotenv/config -r babel-register src/worker",
    "start:server": "nodemon src/server/index.js",
    "build": "npm run clean && babel --out-dir ./build --ignore **/__tests__,**/__mocks__ ./src",
    "clean": "rimraf build && mkdir build",
    "test": "npm-run-all --parallel typecheck lint jest",
    "jest": "jest",
    "jest:coverage": "jest --coverage",
    "lint": "eslint ./src",
    "lint:fix": "eslint --fix ./src",
    "typecheck": "flow check ./src",
    "commitmsg": "validate-commit-msg",
    "prepush": "npm test"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.js"
    ],
    "coverageReporters": [
      "lcov"
    ],
    "setupFiles": [
      "./scripts/jest-env.js"
    ],
    "testEnvironment": "node",
    "testPathDirs": [
      "<rootDir>/src"
    ],
    "testRegex": "/__tests__/.*-test\\.js$"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    },
    "validate-commit-msg": {
      "maxSubjectLength": 72,
      "types": "conventional-commit-types"
    }
  },
  "dependencies": {
    "agenda": "^0.9.0",
    "async-retry": "^0.2.1",
    "babel-runtime": "^6.22.0",
    "body-parser": "^1.16.0",
    "bytes": "^2.4.0",
    "cheerio": "^0.22.0",
    "cors": "^2.8.1",
    "dataloader": "^1.2.0",
    "date-fns": "^1.27.2",
    "dotenv": "^4.0.0",
    "express": "^4.14.1",
    "graphql": "^0.9.1",
    "graphql-server-express": "^0.6.0",
    "graphql-tools": "^0.9.2",
    "lodash": "^4.17.4",
    "mongodb": "^2.2.22",
    "morgan": "^1.7.0",
    "movie-api": "^0.14.4",
    "promise-throttle": "^0.3.1",
    "random-useragent": "^0.3.1",
    "request": "^2.79.0",
    "request-promise-native": "^1.0.3",
    "slugify": "^1.1.0",
    "thepiratebay": "^1.3.3",
    "type-detect": "^4.0.0",
    "winston": "^2.3.1",
    "winston-papertrail": "^1.0.4"
  },
  "devDependencies": {
    "babel-cli": "^6.22.2",
    "babel-jest": "^18.0.0",
    "babel-plugin-lodash": "^3.2.11",
    "babel-plugin-syntax-flow": "^6.18.0",
    "babel-plugin-transform-flow-strip-types": "^6.22.0",
    "babel-plugin-transform-runtime": "^6.22.0",
    "babel-preset-es2015": "^6.22.0",
    "babel-preset-stage-0": "^6.22.0",
    "babel-register": "^6.22.0",
    "commitizen": "^2.9.5",
    "cz-conventional-changelog": "^1.2.0",
    "eslint": "^3.13.1",
    "eslint-config-anvilabs": "^4.0.0",
    "flow-bin": "^0.37.4",
    "husky": "^0.13.1",
    "inquirer": "^3.0.1",
    "jest": "^18.1.0",
    "nodemon": "^1.11.0",
    "npm-run-all": "^4.0.1",
    "rimraf": "^2.5.4",
    "validate-commit-msg": "^2.11.1"
  }
}
